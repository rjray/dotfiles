# Aliases specific to gangrel
backuphome () {
    rsync -e ssh -auzv --delete --exclude '/Dropbox' --exclude '.Trash' --exclude '.mozilla/firefox/*/Cache' --exclude '/.cache' --exclude '/Cache/' /home/users/rjray/ tremere:/freeagent0/backups/gangrel/rjray
}

mtremere () {
    grep tremere /etc/fstab | awk '{print $1}' | xargs -n 1 -r mount
}

umtremere () {
    df | grep tremere: | awk '{print $1}' | xargs -n 1 -r umount
}

# Env-vars we don't want in .bash_env
export RELEASE_TESTING=1
