# Stuff specific to work desktop
export PERLBREW_ROOT=/opt/perlbrew
export PERLBREW_HOME=/opt/perlbrew-libs
export PATH=/opt/perlbrew/bin:/sbin:/usr/sbin:$PATH

# Incompatibilities with Python libraries:
post-review() {
    cwd=$(pwd)
    ssh cyclsvl "cd $cwd; /usr/software/rats/bin/post-review $*"
}

if [ -f ${PERLBREW_ROOT}/etc/bashrc ]; then
    source ${PERLBREW_ROOT}/etc/bashrc
fi
