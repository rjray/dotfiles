; EditorConfig file: https://EditorConfig.org
; Install the "EditorConfig" plugin into your editor to use

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

; 4 spaces for Python
[*.py]
indent_size = 4

; Tabs for Makefile's
[Makefile]
indent_style = tab
